# A kv file is a mark up language very similar to the HTML , the strutcture is XML
TextDesign: #
#put colors and design here
<TextDesign@BoxLayout>
  sendText: search_box
  sendBoxerText: search_box # for another convo points
  orientation:"vertical" # sets the orientation of the BoxLayout
  canvas:
    Color:
      rgb: (0.93, 0.93, 0.93)
  BoxLayout:
    height:"40dp"# the hight of the content
    size_hint_y:None
    TextInput:
      id: search_box
      size_hint_x:30#the width of the widget text
      font_size:20
    #https://kivy.org/doc/stable/api-kivy.uix.button.html
    CustomButton:
      text:"Search"
      size_hint_x:20
      on_press:root.sendData() # this is the class method we are calling





<CustomButton@Button>:
  background_normal: ''
  border:0,0,1,1
  background_color: (1.84, 0, 0, 1)




